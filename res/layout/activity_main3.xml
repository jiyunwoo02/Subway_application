<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--    서브웨이 즐기기 버튼 클릭 시 -->

<!--    서브웨이 이미지뷰-->
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-1dp"
        app:srcCompat="@drawable/subway" />

<!--    초록 라인 텍스트뷰-->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:fontFamily="sans-serif-medium"
        android:text="______________________________________________________________"
        android:textColor="#4CAF50" />

<!--    서브웨이 이용 tip 텍스트뷰-->
    <TextView
        android:id="@+id/howtouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="129dp"
        android:layout_marginRight="129dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="서브웨이 이용 TIP!"
        android:textSize="20sp"
        android:textStyle="normal" />

<!--    서브웨이 이용방법 버튼-->
    <Button
        android:id="@+id/howorder"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="435dp"
        android:layout_marginEnd="6dp"
        android:onClick="howorderClicked"
        android:text="서브웨이 이용방법\n🔍 HOW TO USE"
        app:backgroundTint="#4CAF50" />

<!--    tip 이미지뷰 2-->
    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="211dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="236dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:srcCompat="@drawable/tip2" />

<!--    tip 이미지뷰 1-->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="233dp"
        android:layout_height="212dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="178dp"
        android:layout_marginRight="178dp"
        app:srcCompat="@drawable/tip" />

<!--    자세히 보기 버튼-->
    <Button
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="4dp"
        android:onClick="tipClicked"
        android:text="📰 자세히 보기 (대학내일)"
        app:backgroundTint="#3B853E" />

<!--    추천 레시피 버튼-->
    <Button
        android:id="@+id/recommend"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="495dp"
        android:layout_marginEnd="6dp"
        android:onClick="recipeClicked"
        android:text="오늘의 추천 레시피\n👉🏻click!"
        app:backgroundTint="#FFC107" />

<!--앱 광고 이미지뷰-->
    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="198dp"
        android:layout_height="256dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="332dp"
        android:layout_marginEnd="178dp"
        android:layout_marginRight="178dp"
        app:srcCompat="@drawable/app" />

<!--    서브웨이 유튜브 버튼-->
    <Button
        android:id="@+id/youtube"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="6dp"
        android:onClick="youtubeClicked"
        android:text="▶ 서브웨이 유튜브"
        app:backgroundTint="#FF5722" />

</RelativeLayout>